{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "target": "ES6",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "paths": {
      "@global": [
        "Global.ts"
      ]
    }
  }
}